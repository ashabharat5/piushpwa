//------------------------------------------------------------------------------------------
// fixing the angle within 360 degrees
//------------------------------------------------------------------------------------------
function fix360(v)
{
while(v < 0.0)v += 360.0;
while(v > 360.0)v -= 360.0;
return v;
}

//------------------------------------------------------------------------------------------
// Day of the Week
//------------------------------------------------------------------------------------------
function weekDay(jd)
{
// Julian date for the begin of the day
jd0 = Math.floor(jd) + 0.5;
if (jd < jd0)jd0 -= 1;

// day
jdn = jd0 + 1.5;
dn1 = Math.floor(jdn/7)*7;


wday = Math.floor(jdn - dn1);

return wday;
}

